{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "..",
        "outDir": "./dist/",
        "sourceMap": false,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "module": "none",
        "target": "es6",
        "lib": ["es6"],
        "paths": {
            "shared/*": ["../shared/src/*"]
        }
    },
    "include": [
        "./src/**/*",
        "../shared/src/**/*"
    ]
}
